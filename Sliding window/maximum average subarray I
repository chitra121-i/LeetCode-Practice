class Solution {
public:
    double findMaxAverage(vector<int>& nums, int k) {
       int i;
       int n=nums.size();
       int sum=0;
       double maxSum=0;
       double avg;
       for(i=0;i<k;i++){
     sum=sum+nums[i];
       }
     maxSum=sum;
     for(i=1;i<=n-k;i++){
        sum=sum-nums[i-1]+nums[i+k-1];
        if(sum>maxSum) maxSum=sum;
     }
     avg=maxSum/k;
     return avg;
    }
};
